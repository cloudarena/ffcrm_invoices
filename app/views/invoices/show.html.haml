- if (template = template_for_current_view)
  = render(template, :invoice => @invoice)
- else

  -# default view

  = styles_for :task, :opportunity
  
  = render 'invoices/title_bar', :invoice => @invoice

  = render "comments/new", :commentable => @invoice
  = render :partial => "shared/timeline", :collection => @timeline

  = hook(:show_invoice_bottom, self) do

    = render :partial => "tasks/tasks", :locals => {:object => @invoice}

    -#= render :partial => "opportunities/opportunities", :locals => {:object => @invoice}
    
    -#= render :partial => "versions/versions", :locals => {:object => @invoice}

    = load_select_popups_for(@invoice, :tasks, :opportunities)
